{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": ["<rootDir>/jest-setup.js"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  },
  "globals": {
    "API_PORT": 3001,
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "testEnvironmentOptions": {
    "customExportConditions": ["node", "node-addons"]
  }
}
